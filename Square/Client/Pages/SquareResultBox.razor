@using Square.Client.ViewModels
@namespace Square.Client.Pages

@if (SquareModel is not null)
{
    <div class="card mt-2">
        <h5 class="card-title">Kiértékelés</h5>
        <div class="card-div">
            <p>Kerület: @SquareModel.Perimeter</p>
            <p>Terület: @SquareModel.Area</p>
        </div>
    </div>
}


@code {
    [CascadingParameter(Name = "ViewModel")]
    private SquareViewModel? SquareModel { get; set; }
}
